<div class="py-4">
    <h2 class="text-2xl pb-4 dark:text-white uppercase">Ustawienia</h2>
    <div class="mb-6">
        <span>Aktualnie wybrany profil ustawień:</span>
        <span class="p-1 rounded dark:bg-blue-450">{{ object.settings.name }}</span>
    </div>

    {{ form_start(select_profile_form) }}
    <div class="select-profile">
        <p class="uppercase">Wybierz profil:</p>
        {{ form_widget(select_profile_form.settings) }}
    </div>
    <div>
        <div class="flex mt-6 gap-2">
            {{ form_widget(select_profile_form.save, {
                'label': 'Zmień profil',
                'attr': {'class': 'btn btn-green pt-4'}
            }) }}
            <button class="btn btn-empty pt-4">Dodaj nowy</button>
        </div>
    </div>
    {{ form_end(select_profile_form) }}
</div>